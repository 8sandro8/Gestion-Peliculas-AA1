<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sandro.gestionpeliculas.DirectoresController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="GestiÃ³n de Directores">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button fx:id="btnVolver" layoutX="720.0" layoutY="30.0" mnemonicParsing="false" onAction="#volverMenu" text="Volver" />

        <TextField fx:id="txtBuscar" layoutX="30.0" layoutY="80.0" prefWidth="300.0" promptText="Buscar director..." />

        <TableView fx:id="tablaDirectores" layoutX="30.0" layoutY="120.0" prefHeight="450.0" prefWidth="350.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="298.0" text="Nombre" />
            </columns>
        </TableView>

        <Label layoutX="420.0" layoutY="120.0" text="Nombre Completo:" />
        <TextField fx:id="txtNombre" layoutX="420.0" layoutY="140.0" prefWidth="300.0" />

        <Label layoutX="420.0" layoutY="180.0" text="Fecha de Nacimiento:" />
        <DatePicker fx:id="dateNacimiento" layoutX="420.0" layoutY="200.0" prefWidth="300.0" />

        <Label layoutX="420.0" layoutY="240.0" text="Nacionalidad:" />
        <TextField fx:id="txtNacionalidad" layoutX="420.0" layoutY="260.0" prefWidth="300.0" />

        <Label layoutX="420.0" layoutY="300.0" text="Web Oficial (URL):" />
        <TextField fx:id="txtWeb" layoutX="420.0" layoutY="320.0" prefWidth="300.0" />

        <Button fx:id="btnLimpiar" layoutX="420.0" layoutY="400.0" mnemonicParsing="false" onAction="#limpiarFormulario" text="Limpiar / Nuevo" />

        <Button fx:id="btnEliminar" layoutX="540.0" layoutY="400.0" mnemonicParsing="false" onAction="#eliminarDirector" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar" />

        <Button fx:id="btnGuardar" layoutX="620.0" layoutY="400.0" mnemonicParsing="false" onAction="#guardarDirector" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="GUARDAR" />

    </children>
</AnchorPane>
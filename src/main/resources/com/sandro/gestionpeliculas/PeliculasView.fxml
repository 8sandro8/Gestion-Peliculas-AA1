<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #1e1e2e;" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sandro.gestionpeliculas.PeliculasController">
    <children>

        <Button text="%pelis.volver" onAction="#volverAlMenu" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="15.0" style="-fx-background-color: #45475a; -fx-text-fill: white; -fx-cursor: hand;" />

        <HBox spacing="20.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <children>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="%pelis.titulo" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" />

                        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2b2d42; -fx-padding: 5; -fx-background-radius: 5;">
                            <Label text="%pelis.buscar" style="-fx-text-fill: #a6adc8; -fx-font-weight: bold;" />
                            <TextField fx:id="txtBuscar" style="-fx-background-color: #1e1e2e; -fx-text-fill: white;" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <TableView fx:id="tablaPeliculas" VBox.vgrow="ALWAYS" style="-fx-background-color: #2b2d42; -fx-text-fill: white;">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colTitulo" prefWidth="200.0" text="%pelis.col.titulo" />
                                <TableColumn fx:id="colDirector" prefWidth="150.0" text="%pelis.col.director" />
                                <TableColumn fx:id="colAnio" prefWidth="80.0" text="AÃ±o" /> <TableColumn fx:id="colGenero" prefWidth="120.0" text="%pelis.form.genero" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT">
                            <Button text="ðŸ“„ CSV" onAction="#exportarCSV" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0" prefWidth="340.0" style="-fx-background-color: #2b2d42; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 0);">
                    <children>
                        <Label text="Datos" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #89b4fa; -fx-border-color: transparent transparent #89b4fa transparent; -fx-border-width: 2;" />

                        <GridPane vgap="15.0" hgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="90.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="%pelis.form.titulo" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                                <TextField fx:id="txtTitulo" style="-fx-background-color: #1e1e2e; -fx-text-fill: white; -fx-border-color: #585b70; -fx-border-radius: 3;" GridPane.columnIndex="1" />

                                <Label text="%pelis.form.director" style="-fx-text-fill: white; -fx-font-weight: bold;" GridPane.rowIndex="1" />
                                <ComboBox fx:id="comboDirector" prefWidth="250.0" style="-fx-background-color: #1e1e2e; -fx-mark-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="%pelis.form.fecha" style="-fx-text-fill: white; -fx-font-weight: bold;" GridPane.rowIndex="2" />
                                <TextField fx:id="txtAnio" style="-fx-background-color: #1e1e2e; -fx-text-fill: white; -fx-border-color: #585b70; -fx-border-radius: 3;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="%pelis.form.duracion" style="-fx-text-fill: white; -fx-font-weight: bold;" GridPane.rowIndex="3" />
                                <TextField fx:id="txtDuracion" promptText="min" style="-fx-background-color: #1e1e2e; -fx-text-fill: white; -fx-border-color: #585b70; -fx-border-radius: 3;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="%pelis.form.genero" style="-fx-text-fill: white; -fx-font-weight: bold;" GridPane.rowIndex="4" />
                                <TextField fx:id="txtGenero" style="-fx-background-color: #1e1e2e; -fx-text-fill: white; -fx-border-color: #585b70; -fx-border-radius: 3;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            </children>
                        </GridPane>

                        <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #585b70; -fx-border-style: dashed; -fx-border-radius: 5; -fx-background-color: #1e1e2e;">
                            <children>
                                <ImageView fx:id="imgPoster" fitHeight="160.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                                <Button text="%pelis.btn.foto" onAction="#seleccionarImagen" style="-fx-background-color: #45475a; -fx-text-fill: white;" />
                            </children>
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10" />
                            </padding>
                        </VBox>

                        <HBox spacing="10.0" alignment="CENTER">
                            <Button text="%pelis.btn.limpiar" onAction="#limpiarFormulario" style="-fx-background-color: #9399b2; -fx-text-fill: black;" />
                            <Button text="%pelis.btn.guardar" onAction="#guardarPelicula" style="-fx-background-color: #89b4fa; -fx-text-fill: black; -fx-font-weight: bold;" />
                            <Button text="%pelis.btn.eliminar" onAction="#eliminarPelicula" style="-fx-background-color: #f38ba8; -fx-text-fill: black;" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
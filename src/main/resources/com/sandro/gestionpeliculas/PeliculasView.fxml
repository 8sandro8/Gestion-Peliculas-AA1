<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sandro.gestionpeliculas.PeliculasController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Gestión de Películas">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button fx:id="btnVolver" layoutX="720.0" layoutY="18.0" mnemonicParsing="false" onAction="#volverMenu" prefHeight="25.0" prefWidth="66.0" text="Volver" />

        <TextField fx:id="txtBuscar" layoutX="14.0" layoutY="65.0" promptText="Buscar por título..." />

        <TableView fx:id="tablaPeliculas" layoutX="14.0" layoutY="100.0" prefHeight="480.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="200.0" text="Título" />
                <TableColumn fx:id="colDirector" prefWidth="140.0" text="ID Director" />
            </columns>
        </TableView>

        <Label layoutX="457.0" layoutY="132.0" text="Titulo" />
        <TextField fx:id="txtTitulo" layoutX="570.0" layoutY="128.0" prefWidth="200.0" />
        <Label layoutX="435.0" layoutY="178.0" text="Duración (min)" />
        <TextField fx:id="txtDuracion" layoutX="570.0" layoutY="174.0" prefWidth="200.0" />
        <Label layoutX="444.0" layoutY="225.0" text="Presupuesto" />
        <TextField fx:id="txtPresupuesto" layoutX="570.0" layoutY="221.0" prefWidth="200.0" />
        <Label layoutX="440.0" layoutY="272.0" text="Fecha Estreno" />
        <DatePicker fx:id="dateLanzamiento" layoutX="570.0" layoutY="268.0" prefWidth="200.0" />
        <Label layoutX="455.0" layoutY="321.0" text="Género" />
        <ComboBox fx:id="comboGenero" layoutX="570.0" layoutY="317.0" prefWidth="200.0" />
        <CheckBox fx:id="checkAdultos" layoutX="570.0" layoutY="374.0" mnemonicParsing="false" text="Es +18 (Contenido Adulto)" />
        <ImageView fx:id="imgCartel" fitHeight="150.0" fitWidth="120.0" layoutX="450.0" layoutY="410.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: black;" />

        <Button fx:id="btnFoto" layoutX="435.0" layoutY="561.0" mnemonicParsing="false" onAction="#seleccionarFoto" text="Seleccionar Carátula" />
        <Button fx:id="btnLimpiar" layoutX="600.0" layoutY="450.0" mnemonicParsing="false" onAction="#limpiarFormulario" prefHeight="25.0" prefWidth="100.0" text="Limpiar" />
        <Button fx:id="btnEliminar" layoutX="600.0" layoutY="500.0" mnemonicParsing="false" onAction="#eliminarPelicula" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar" />
        <Button fx:id="btnGuardar" layoutX="600.0" layoutY="545.0" mnemonicParsing="false" onAction="#guardarPelicula" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="GUARDAR" />
    </children>
</AnchorPane>